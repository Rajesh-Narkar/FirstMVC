
@{
    ViewData["Title"] = "Login";
}
@model LoginModel

@* <partial name="Notification"></partial> *@

<h1>Login</h1>

<form method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input asp-for="Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
        <span asp-validation-for="Email" class="text-danger"></span>
        <span class="text-danger">@TempData["InvalidEmal"]</span>
    </div>
   
    <div class="form-group">
        <label for="exampleInputEmail1">Password</label>
        <input asp-for="Password" type="password" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter Password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">SignIn</button>
</form>